<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dip">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/background_material_light"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:id="@+id/image_recycler_about_phone"
                android:src="@drawable/ic_android" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/image_recycler_about_phone"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="#000000"
                android:text="sample"
                android:textSize="12dp"
                android:id="@+id/text_recycler_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/text_recycler_title"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toRightOf="@id/image_recycler_about_phone"
                android:gravity="center_vertical"
                android:id="@+id/text_recycler_subtitle"
                android:text="Coba"
                android:textColor="@color/colorAccent"
                android:textSize="20dp"/>

            </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>